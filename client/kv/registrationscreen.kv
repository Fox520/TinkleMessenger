<Registration>:
    GridLayout:
        rows: 2
        Toolbar:
            id: toolbar
            title: "Registration"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]

        GridLayout:
            rows: 3
            orientation: 'vertical'
            padding: [10,50,10,50]
            #spacing: 50
            BoxLayout:
                Image:
                    halign: "center"
                    source: "img/tinkle_logo.png"

            GridLayout:
                rows:4
                cols:3
                orientation: "vertical"
                MDLabel:
                    size_hint:(0.1,0.1) 
                MDTextField:
                    id: username
                    multiline: False
                    max_text_length: 12
                    required: True
                    hint_text: "Username"
                    helper_text: "min 4 characters; no spaces"
                    helper_text_mode: "on_focus"
                    write_tab: False
                    on_text_validate: first_name.focus = True
                MDLabel:
                    size_hint:(0.1,0.1) 
                MDLabel:
                    size_hint:(0.1,0.1) 
                MDTextField:
                    id: first_name
                    multiline: False
                    hint_text: "First name"
                    required: True
                    write_tab: False
                    on_text_validate: last_name.focus = True
                MDLabel:
                    size_hint:(0.1,0.1) 
                MDLabel:
                    size_hint:(0.1,0.1) 
                MDTextField:
                    id: last_name
                    multiline: False
                    hint_text: "Surname"
                    write_tab: False
                    on_text_validate: email_address.focus = True
                MDLabel:
                    size_hint:(0.1,0.1) 
                MDLabel:
                    size_hint:(0.1,0.1) 
                MDTextField:
                    id: email_address
                    multiline: False
                    hint_text: "E-mail"
                    write_tab: False
                    required: True
                MDLabel:
                    size_hint:(0.1,0.1) 
            GridLayout:
                rows:4
                cols:3
                MDLabel:
                    text: ""
                MDLabel:
                    text: ""
                MDLabel:
                    text: ""
                MDLabel:
                    text: ""

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:

                        ProgressSpinner:
                            auto_start: False
                            id:prg_spin
                            speed: 2
                            color: get_color_from_hex("#4285f4")
                            stroke_width: 1.6
                MDRaisedButton:
                    font_size: sp(20)
                    text: "Proceed"
                    on_release:
                        prg_spin.start_spinning()
                        Clock.schedule_once(lambda dt: root.call_check_name_function(), 2)

                MDLabel:
                    text: ""