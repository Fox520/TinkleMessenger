<Registration>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Registration"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]

        GridLayout:
            rows: 3
            orientation: 'vertical'
            padding: [10,50,10,50]
            #spacing: 50
            BoxLayout:
                orientation: "vertical"
                Image:
                    halign: "center"
                    source: "img/tinkle_logo.png"
                MDLabel:
                    font_name: "Cursive"
                    text: "Almost there..."
                    halign: "center"
                    font_size: sp(50)

            GridLayout:
                cols:1
                padding: [20,0,20,0]
                orientation: "vertical"
                MDTextField:
                    id: username
                    hint_text: "Username (no spaces)"
                    multiline: False
                    max_text_length: 12
                    required: True
                    write_tab: False
                    on_text_validate: first_name.focus = True

                MDTextField:
                    id: first_name
                    multiline: False
                    hint_text: "First name"
                    required: True
                    write_tab: False
                    on_text_validate: last_name.focus = True

                MDTextField:
                    id: last_name
                    multiline: False
                    hint_text: "Surname"
                    write_tab: False
                    on_text_validate: email_address.focus = True

                MDTextField:
                    id: email_address
                    multiline: False
                    hint_text: "E-mail"
                    write_tab: False
                    required: True

            GridLayout:
                rows:4
                cols:3
                Widget:
                Widget:
                Widget:
                Widget:

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:

                        ProgressSpinner:
                            auto_start: False
                            id:prg_spin
                            speed: 2
                            color: get_color_from_hex("#4285f4")
                            stroke_width: 1.6
                MDRaisedButton:
                    text: "Proceed"
                    on_release:
                        prg_spin.start_spinning()
                        Clock.schedule_once(lambda dt: root.call_check_name_function(), 2)

                Widget: