#:import get_hex_from_color kivy.utils.get_hex_from_color

<Controller>:
    NavigationLayout:
        id: nav_draw
        MainNavigationDrawer:
            id: nothing
        GridLayout:
            rows: 3
            MDToolbar:
                id: toolbar
                title: "Tinkle Messenger"
                md_bg_color: app.theme_cls.primary_color
                background_palette: 'Primary'
                background_hue: '500'
                elevation: 10
                left_action_items:
                    [['menu', lambda x: nav_draw.toggle_nav_drawer()]]
                right_action_items:
                    [['dots-vertical', lambda x: root.show_bottom_popup()]]

            MDBottomNavigation:

                MDBottomNavigationItem:
                    icon: "chat"
                    name: "friends"
                    text: "Friends"

                    GetNamesForCurrentFriendsScreen:

                MDBottomNavigationItem:
                    icon: "group"
                    name: "groups_list"
                    text: "groups"
                    GroupsList:

                MDBottomNavigationItem:
                    name: "find_friends"
                    text: "Find Friends"
                    icon: "account-search"
                    GetNamesForFindFriendsScreen:


<MyPopupScreenOne@BoxLayout>:
    orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: self.minimum_height

        Widget:
        MDRoundFlatButton:
            text: "Requests"
            on_release:
                app.manage_screens("names_for_friend_req", "add")
                app.change_screen("names_for_friend_req")
        Widget:
        MDRoundFlatButton:
            text: "Create group"
            on_release:
                app.manage_screens("create_group_screen", "add")
                app.change_screen("create_group_screen")
        Widget:

    TwoLineIconListItem:
        text: "Public chat"
        on_release:
            app.manage_screens("public_chat_screen", "add")
            app.change_screen("public_chat_screen")
        secondary_text:
            "[color=%s]Meet new people[/color]" \
            % get_hex_from_color(app.theme_cls.primary_color)
        IconLeftSampleWidget:
            icon: 'home-group'

    TwoLineIconListItem:
        text: "Backup"
        secondary_text:
            "[color=%s]Creates a backup of your account credentials.[/color]" \
            % get_hex_from_color(app.theme_cls.primary_color)
        on_release:
            root.parent.parent.parent._start_backup()
        IconLeftSampleWidget:
            icon: 'backup-restore'

    TwoLineIconListItem:
        text: "Delete messages"
        on_release:
            root.parent.parent.parent.delete_logs()
        secondary_text:
            "[color=%s]Permanently removes the messages from device[/color]" \
            % get_hex_from_color(app.theme_cls.primary_color)
        IconLeftSampleWidget:
            icon: 'delete-forever'

    OneLineIconListItem:
        text: "Settings"
        on_release:
            app.open_settings()
        IconLeftSampleWidget:
            icon: 'settings-box'

    OneLineIconListItem:
        text: "Tinkle"
        on_release:
            root.parent.parent.parent.show_about()
        IconLeftSampleWidget:
            icon: 'worker'

    Widget: